{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 8,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Base_x64",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/bin/${presetName}",
      "installDir": "${sourceDir}/build/obj/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CRAYON_BUILD_EXAMPLES":  true
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "Debug_x64",
      "displayName": "Debug x64",
      "inherits": "Base_x64",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Release_x64",
      "displayName": "Release x64",
      "inherits": "Base_x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
